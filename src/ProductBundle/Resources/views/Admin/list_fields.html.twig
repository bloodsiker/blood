{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% if object is instanceof('\\ProductBundle\\Entity\\Product') %}
        {% if field_description.name == 'image' %}
            {% set v = asset('bundles/admin/images/default_item.png') %}
            {% set image_preview_path = object.item ? object.item.image.path : null %}
            <img src="{{ image_preview_path|default(v) }}?{{ random() }}" style="max-height: 100px;"/>
        {% endif %}
    {% endif %}
{% endblock %}